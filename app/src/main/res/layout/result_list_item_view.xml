<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/list_item_card_view_margin"
    android:layout_marginStart="@dimen/list_item_card_view_margin"
    android:layout_marginTop="@dimen/list_item_card_view_margin"
    android:background="@color/cardview_shadow_start_color"
    android:elevation="@dimen/list_item_card_view_elevation"
    android:padding="@dimen/list_item_card_view_margin"
    app:cardCornerRadius="@dimen/list_item_card_view_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/keyValue"
            android:layout_width="@dimen/list_item_key_text_view_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_divider_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_view_size"
            tools:text="PDF file"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/list_item_divider_margin"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/sizeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_card_view_corner_radius"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_item_text_view_size"
            tools:text="1234565"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
