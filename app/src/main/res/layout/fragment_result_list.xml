<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pidugu.example.com.storagescanner.fragment.ResultListFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/result_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_item_card_view_elevation"
        android:text="@string/average_values"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="@dimen/list_item_text_view_size"/>

    <TextView
        android:id="@+id/average_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/cardview_default_radius"
        tools:text="10299099"/>
</LinearLayout>

